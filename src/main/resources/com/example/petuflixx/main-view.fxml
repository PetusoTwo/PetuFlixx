<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.petuflixx.MainController"
           stylesheets="@styles.css">

    <VBox spacing="0">
        <!-- Barra de navegación superior con efecto de cristal -->
        <HBox style="-fx-background-color: rgba(0,0,0,0.8); -fx-background-radius: 0 0 20 20; -fx-padding: 15 30 15 30; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 0, 3);" 
              alignment="CENTER_LEFT" spacing="20">
            <Label text="PETUFLIX" style="-fx-text-fill: #e50914; -fx-font-size: 36px; -fx-font-weight: bolder; -fx-font-family: 'Arial Rounded MT Bold'; -fx-effect: dropshadow(gaussian, rgba(229,9,20,0.3), 10, 0, 0, 0);"/>
            
            <HBox spacing="25" alignment="CENTER_LEFT">
                <Button text="Inicio" styleClass="nav-button"/>
                <Button text="Películas" styleClass="nav-button"/>
                <Button text="Series" styleClass="nav-button"/>
                <Button text="Mi Lista" styleClass="nav-button"/>
            </HBox>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox spacing="15" alignment="CENTER">
                <TextField promptText="Buscar películas, series..." styleClass="search-field"/>
                <Button styleClass="icon-button">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image>
                                <Image url="@icons/search-white.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="profile-button">
                    <graphic>
                        <ImageView fitWidth="32" fitHeight="32" style="-fx-background-radius: 4;">
                            <image>
                                <Image url="@icons/profile-icon.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </HBox>

        <!-- Contenido principal -->
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background: transparent; -fx-background-color: transparent;">
            <VBox spacing="40" style="-fx-padding: 20 30 80 30;">
                <!-- Hero Banner con efecto parallax -->
                <StackPane style="-fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.6), 20, 0, 0, 10);">
                    <ImageView fitWidth="1000" fitHeight="500" preserveRatio="false" style="-fx-background-radius: 15;">
                        <image>
                            <Image url="@images/featured-movie.jpg"/>
                        </image>
                    </ImageView>
                    <VBox alignment="BOTTOM_LEFT" style="-fx-background-color: linear-gradient(to top, #000000ee, #00000000); -fx-padding: 40; -fx-spacing: 15; -fx-background-radius: 15;">
                        <Label text="ESTRENO EXCLUSIVO" style="-fx-text-fill: #e50914; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label text="EL PROTAGONISTA" style="-fx-text-fill: white; -fx-font-size: 56px; -fx-font-weight: bolder; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.8), 10, 0, 0, 2);"/>
                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="95% coincidencia" style="-fx-text-fill: #46d369; -fx-font-weight: bold; -fx-font-size: 16px;"/>
                            <Label text="2024" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                            <Label text="2h 15m" style="-fx-text-fill: white; -fx-font-size: 16px;"/>
                            <Label text="HD" style="-fx-text-fill: white; -fx-border-color: white; -fx-border-width: 1; -fx-padding: 0 5 0 5; -fx-border-radius: 2; -fx-font-size: 16px;"/>
                        </HBox>
                        <Text style="-fx-fill: white; -fx-font-size: 16px; -fx-wrapping-width: 600;">
                            Una historia épica que te llevará a un viaje inolvidable. Descubre el poder de la amistad y la valentía en esta increíble aventura.
                        </Text>
                        <HBox spacing="15">
                            <Button text="▶ Reproducir" styleClass="play-button"/>
                            <Button text="+ Mi Lista" styleClass="secondary-button"/>
                        </HBox>
                    </VBox>
                </StackPane>

                <!-- Listas de contenido -->
                <VBox spacing="15">
                    <Label text="Películas Destacadas" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <HBox spacing="20">
                        <!-- Tarjeta de película con efecto hover -->
                        <VBox styleClass="movie-card" spacing="5" alignment="TOP_CENTER">
                            <StackPane>
                                <ImageView fitWidth="240" fitHeight="360" styleClass="movie-poster" preserveRatio="false">
                                    <image>
                                        <Image url="@images/movie1.jpg"/>
                                    </image>
                                </ImageView>
                                <VBox alignment="CENTER" style="-fx-background-color: rgba(0,0,0,0.7); -fx-padding: 10; -fx-opacity: 0;" styleClass="hover-info">
                                    <Button text="▶" styleClass="play-mini-button"/>
                                    <Label text="95% coincidencia" style="-fx-text-fill: #46d369; -fx-font-size: 14px;"/>
                                    <Label text="Acción • Aventura" style="-fx-text-fill: white; -fx-font-size: 14px;"/>
                                </VBox>
                            </StackPane>
                            <Label text="El Protagonista" styleClass="movie-title"/>
                            <HBox spacing="5">
                                <Label text="2024" styleClass="movie-info"/>
                                <Label text="•" styleClass="movie-info"/>
                                <Label text="2h 15m" styleClass="movie-info"/>
                            </HBox>
                        </VBox>
                        
                        <!-- Más tarjetas de películas -->
                    </HBox>
                </VBox>

                <!-- Categorías con diseño de cuadrícula moderna -->
                <VBox spacing="15">
                    <Label text="Explorar por categorías" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                            <ColumnConstraints percentWidth="25"/>
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints percentHeight="50"/>
                            <RowConstraints percentHeight="50"/>
                        </rowConstraints>
                        
                        <Button text="Acción" styleClass="category-button" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Button text="Comedia" styleClass="category-button" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Button text="Drama" styleClass="category-button" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                        <Button text="Ciencia Ficción" styleClass="category-button" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                        <Button text="Romance" styleClass="category-button" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Button text="Terror" styleClass="category-button" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Button text="Documentales" styleClass="category-button" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                        <Button text="Animación" styleClass="category-button" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Más secciones -->
                <VBox spacing="15">
                    <Label text="Películas Populares" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <HBox spacing="20">
                        <!-- Tarjetas de películas populares -->
                    </HBox>
                </VBox>

                <VBox spacing="15">
                    <Label text="Series Recomendadas" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
                    <HBox spacing="20">
                        <!-- Tarjetas de series -->
                    </HBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </VBox>
</StackPane>